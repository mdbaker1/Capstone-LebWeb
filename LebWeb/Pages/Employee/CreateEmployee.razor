@page "/createemployee"
@inject IEmployeeDataService _employeeData
@inject NavigationManager _navManager

<h3>CreateEmployee</h3>

<div class="row">
    <div class="col-lg-6 col-xl-4">
        <EditForm Model="@employee" OnValidSubmit="HandleValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label>First Name</label>
                <InputText @bind-Value="employee.FirstName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Last Name</label>
                <InputText @bind-Value="employee.LastName" class="form-control" />
            </div>
            <div class="form-group">
                <label>Hire Date</label>
                <InputDate @bind-Value="employee.HireDate" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <label>Employee Image</label>
                <InputFile @bind-Value="employee.PhotoLink" class="form-control" />
            </div>
            <br />
            <button class="btn btn-primary" type="submit">Create Employee</button>
        </EditForm>
    </div>
</div>

@code {
    private IEmployeeModel employee = new DisplayEmployeeModel();

    private async Task HandleValidSubmit()
    {
        await _employeeData.CreateEmployee(employee);
        employee = new DisplayEmployeeModel();

        _navManager.NavigateTo("/employees");
    }
}
