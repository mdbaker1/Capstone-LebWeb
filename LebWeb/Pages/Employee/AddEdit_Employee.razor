<div class="modal bg-dark" tabindex="-1" style="display:block;" role="dialog">
    <div class="modal-dialog bg-dark">
        <div class="modal-content bg-light">
            <div class="modal-header">
                <h3 class="modal-title">@formTitle</h3>
            </div>
            @if (@ErrorMessage != string.Empty)
            {
                <div class="alert alert-danger">
                    <p>@ErrorMessage</p>
                </div>
            }

            <div class="modal-body">
                <EditForm Model="@employee" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    @if (IsEdit)
                    {
                        <div class="form-group">
                            <strong>
                                <label>Id:</label>
                                <span>@employee.Id</span>
                            </strong>
                        </div>
                        <br />
                    }
                    <div class="row">
                        <div class="form-group mb-3 col-6">
                            <strong>
                                <label>First Name:</label>
                            </strong>
                            <InputText @bind-Value="employee.FirstName" class="form-control" />
                            <ValidationMessage For="@(() => @employee.FirstName)" />
                        </div>
                        <div class="form-group mb-3 col-6">
                            <strong>
                                <label>Last Name:</label>
                            </strong>
                            <InputText @bind-Value="employee.LastName" class="form-control" />
                            <ValidationMessage For="@(() => @employee.LastName)" />
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group mb-3 col-6">
                            <strong>
                                <label>Hire Date:</label>
                            </strong>
                            <InputDate @bind-Value="employee.HireDate" class="form-control" />
                            <ValidationMessage For="@(() => @employee.HireDate)" />
                        </div>
                        @if (IsEdit)
                        {
                            <div class="form-group mb-3 col-6">
                                <strong>
                                    <label>Term Date:</label>
                                </strong>
                                <InputDate @bind-Value="employee.TermDate" class="form-control" />
                                <ValidationMessage For="@(() => @employee.TermDate)" />
                            </div>
                        }
                    </div>
                    <div class="row">
                        @if (@employee.PhotoLink == null || @employee.PhotoLink == "uploads/Avatar.jpg")
                        {
                            <div class="form-group mb-3 col-3">

                                <img src="/uploads/Avatar.jpg" style="width:100px; height:150px;" />
                            </div>
                        }
                        else
                        {
                            <div class="form-group mb-3 col-3 text-center">
                                <img src="@employee.PhotoLink" width="100" height="150" />
                                <a type="button" @onclick="()=>DeleteImage(employee.PhotoLink)" class="text-danger">Delete</a>
                            </div>
                        }
                        <div class="form-group mb-3 col-9">
                            <div class="form-group my-3 me-4 float-end">
                                <label>IsActive:</label>
                                <InputCheckbox @bind-Value="employee.IsActive" />
                            </div>
                            <div class="form-group mb-3 float-end">
                                <strong>
                                    <label>Photo:</label>
                                </strong>
                                <InputFile OnChange="HandleImageUpload" disabled="@InputDisabled" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <br />
                    <button class="btn btn-secondary mx-2" type="button" @onclick="Cancel">Cancel</button>
                    <button class="btn btn-primary mx-2 float-end" type="submit">@ButtonText</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>